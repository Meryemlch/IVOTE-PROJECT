<div class="container mx-auto">
    <h2 class="text-2xl font-bold text-gray-800 mb-8">Mon Profil</h2>
    
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Informations personnelles -->
        <div class="lg:col-span-2">
            <div class="bg-white rounded-xl shadow-lg p-6 mb-6">
                <h3 class="text-lg font-bold text-gray-800 mb-4">Informations personnelles</h3>
                
                <div class="space-y-4">
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Prénom</label>
                            <p class="text-gray-900"><%= user.prenom %></p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Nom</label>
                            <p class="text-gray-900"><%= user.nom %></p>
                        </div>
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                        <p class="text-gray-900"><%= user.email %></p>
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Téléphone</label>
                        <p class="text-gray-900"><%= user.telephone %></p>
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Membre depuis</label>
                        <p class="text-gray-900"><%= user.joinDate %></p>
                    </div>
                </div>
                
                <div class="mt-6">
                    <a href="/profile/edit" class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition inline-flex items-center">
                        <span class="material-icons mr-2 text-sm">edit</span>
                        Modifier le profil
                    </a>
                </div>
            </div>
            
            <!-- Statistiques personnelles -->
            <div class="bg-white rounded-xl shadow-lg p-6">
                <h3 class="text-lg font-bold text-gray-800 mb-4">Mes statistiques</h3>
                <!-- Ajoutez vos statistiques ici -->
            </div>
        </div>
        
        <!-- Avatar et actions -->
        <div>
            <div class="bg-white rounded-xl shadow-lg p-6 mb-6">
                <div class="text-center">
                    <img src="https://cdn-icons-png.flaticon.com/512/3135/3135715.png" 
                         class="w-32 h-32 mx-auto rounded-full border-4 border-indigo-100 mb-4" />
                    <h3 class="font-bold text-gray-800"><%= user.name %></h3>
                    <p class="text-gray-500 text-sm"><%= user.email %></p>
                    
                    <div class="mt-4">
                        <button class="px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 transition">
                            Changer la photo
                        </button>
                    </div>
                </div>
            </div>
            
            <!-- Actions rapides -->
            <div class="bg-white rounded-xl shadow-lg p-6">
                <h3 class="text-lg font-bold text-gray-800 mb-4">Actions rapides</h3>
                <div class="space-y-2">
                    <a href="/dashboard" class="flex items-center p-3 text-gray-700 hover:bg-gray-50 rounded-lg">
                        <span class="material-icons mr-3">dashboard</span>
                        Tableau de bord
                    </a>
                    <a href="/settings" class="flex items-center p-3 text-gray-700 hover:bg-gray-50 rounded-lg">
                        <span class="material-icons mr-3">settings</span>
                        Paramètres
                    </a>
                    <a href="/logout" class="flex items-center p-3 text-red-600 hover:bg-red-50 rounded-lg">
                        <span class="material-icons mr-3">logout</span>
                        Déconnexion
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>