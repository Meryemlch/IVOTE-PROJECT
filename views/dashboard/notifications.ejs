<div class="container mx-auto">
    <div class="flex justify-between items-center mb-8">
        <h2 class="text-2xl font-bold text-gray-800">Notifications</h2>
        <button class="text-sm text-indigo-600 hover:text-indigo-800">
            Tout marquer comme lu
        </button>
    </div>

    <!-- Liste des notifications -->
    <div class="bg-white rounded-xl shadow-lg overflow-hidden">
        <% const notifications = [
            { type: 'vote', title: 'Nouveau vote reçu', desc: 'Quelqu\'un a voté sur votre sondage "Opinion sur le projet"', time: 'Il y a 5 min', unread: true },
            { type: 'comment', title: 'Nouveau commentaire', desc: 'Jean a commenté votre publication', time: 'Il y a 1 heure', unread: true },
            { type: 'friend', title: 'Invitation reçue', desc: 'Marie veut vous ajouter comme ami', time: 'Il y a 2 heures', unread: true },
            { type: 'system', title: 'Mise à jour système', desc: 'Nouvelle fonctionnalité disponible', time: 'Il y a 1 jour', unread: false },
            { type: 'reminder', title: 'Rappel de vote', desc: 'Votre sondage se termine dans 24h', time: 'Il y a 2 jours', unread: false }
        ] %>
        
        <% notifications.forEach((notif, index) => { %>
        <div class="border-b last:border-b-0 hover:bg-gray-50 <%= notif.unread ? 'bg-blue-50' : '' %>">
            <div class="flex items-start p-4">
                <div class="mr-4">
                    <% if(notif.type === 'vote') { %>
                    <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center">
                        <span class="material-icons text-green-600">how_to_vote</span>
                    </div>
                    <% } else if(notif.type === 'comment') { %>
                    <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
                        <span class="material-icons text-blue-600">comment</span>
                    </div>
                    <% } else if(notif.type === 'friend') { %>
                    <div class="w-10 h-10 bg-purple-100 rounded-full flex items-center justify-center">
                        <span class="material-icons text-purple-600">person_add</span>
                    </div>
                    <% } else { %>
                    <div class="w-10 h-10 bg-gray-100 rounded-full flex items-center justify-center">
                        <span class="material-icons text-gray-600">info</span>
                    </div>
                    <% } %>
                </div>
                
                <div class="flex-1">
                    <h4 class="font-medium text-gray-800"><%= notif.title %></h4>
                    <p class="text-gray-600 text-sm mt-1"><%= notif.desc %></p>
                    <p class="text-gray-400 text-xs mt-2"><%= notif.time %></p>
                </div>
                
                <div class="ml-4">
                    <% if(notif.unread) { %>
                    <span class="block w-2 h-2 bg-blue-500 rounded-full"></span>
                    <% } %>
                </div>
            </div>
        </div>
        <% }) %>
    </div>

    <!-- Paramètres de notification -->
    <div class="mt-12 bg-white rounded-xl shadow-lg p-6">
        <h3 class="text-lg font-bold text-gray-800 mb-4">Paramètres de notification</h3>
        
        <div class="space-y-4">
            <div class="flex justify-between items-center">
                <div>
                    <p class="font-medium text-gray-700">Notifications par email</p>
                    <p class="text-sm text-gray-500">Recevoir des emails pour les activités importantes</p>
                </div>
                <label class="relative inline-flex items-center cursor-pointer">
                    <input type="checkbox" class="sr-only peer" checked>
                    <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-indigo-600"></div>
                </label>
            </div>
            
            <div class="flex justify-between items-center">
                <div>
                    <p class="font-medium text-gray-700">Notifications push</p>
                    <p class="text-sm text-gray-500">Notifications sur le site web</p>
                </div>
                <label class="relative inline-flex items-center cursor-pointer">
                    <input type="checkbox" class="sr-only peer" checked>
                    <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-indigo-600"></div>
                </label>
            </div>
        </div>
    </div>
</div>