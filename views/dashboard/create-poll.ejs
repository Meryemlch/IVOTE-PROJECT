<!-- Contenu spécifique à la création de sondage -->
<div class="space-y-8">
    <div class="flex justify-between items-center">
        <div>
            <h1 class="text-2xl font-bold text-gray-800">Créer un nouveau sondage</h1>
            <p class="text-gray-500">Configurez votre sondage et invitez les participants</p>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Formulaire de création -->
        <div class="lg:col-span-2">
            <div class="bg-white rounded-xl shadow p-6">
                <h2 class="text-xl font-bold text-gray-800 mb-6">Détails du sondage</h2>
                
                <form id="createPollForm" class="space-y-6">
                    <!-- Titre du sondage -->
                    <div>
                        <label class="block text-gray-700 mb-2 font-medium">Titre du sondage *</label>
                        <input type="text" 
                               class="poll-form-input w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:border-indigo-500"
                               placeholder="Ex: Élection du représentant étudiant"
                               required>
                    </div>
                    
                    <!-- Description -->
                    <div>
                        <label class="block text-gray-700 mb-2 font-medium">Description</label>
                        <textarea 
                            class="poll-form-input w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:border-indigo-500"
                            rows="3"
                            placeholder="Décrivez l'objet de ce sondage..."></textarea>
                    </div>
                    
                    <!-- Options de vote -->
                    <div>
                        <label class="block text-gray-700 mb-2 font-medium">Options de vote *</label>
                        <div class="space-y-3" id="options-container">
                            <div class="flex items-center space-x-3">
                                <input type="text" 
                                       class="poll-form-input flex-1 p-3 border border-gray-300 rounded-lg focus:outline-none focus:border-indigo-500"
                                       placeholder="Option 1"
                                       required>
                                <button type="button" class="text-red-500 hover:text-red-700 remove-option hidden">
                                    <span class="material-icons">delete</span>
                                </button>
                            </div>
                            <div class="flex items-center space-x-3">
                                <input type="text" 
                                       class="poll-form-input flex-1 p-3 border border-gray-300 rounded-lg focus:outline-none focus:border-indigo-500"
                                       placeholder="Option 2"
                                       required>
                                <button type="button" class="text-red-500 hover:text-red-700 remove-option hidden">
                                    <span class="material-icons">delete</span>
                                </button>
                            </div>
                        </div>
                        <button type="button" id="add-option" class="mt-3 flex items-center text-indigo-600 hover:text-indigo-800">
                            <span class="material-icons mr-1">add</span>
                            Ajouter une option
                        </button>
                    </div>
                    
                    <!-- Paramètres -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label class="block text-gray-700 mb-2 font-medium">Date de fin</label>
                            <input type="datetime-local" 
                                   class="poll-form-input w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:border-indigo-500">
                        </div>
                        <div>
                            <label class="block text-gray-700 mb-2 font-medium">Type de vote</label>
                            <select class="poll-form-input w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:border-indigo-500">
                                <option value="single">Vote unique</option>
                                <option value="multiple">Vote multiple</option>
                                <option value="ranked">Vote par classement</option>
                            </select>
                        </div>
                    </div>
                    
                    <!-- Confidentialité -->
                    <div>
                        <label class="block text-gray-700 mb-2 font-medium">Confidentialité</label>
                        <div class="space-y-2">
                            <label class="flex items-center">
                                <input type="radio" name="privacy" value="public" class="mr-2" checked>
                                <span>Public (visible par tous)</span>
                            </label>
                            <label class="flex items-center">
                                <input type="radio" name="privacy" value="private" class="mr-2">
                                <span>Privé (uniquement sur invitation)</span>
                            </label>
                        </div>
                    </div>
                    
                    <!-- Boutons -->
                    <div class="flex space-x-4 pt-6 border-t">
                        <button type="submit" class="flex-1 py-3 bg-indigo-600 text-white rounded-lg font-medium hover:bg-indigo-700 transition">
                            <span class="material-icons mr-2">save</span>
                            Créer le sondage
                        </button>
                        <button type="button" class="py-3 px-6 border border-gray-300 text-gray-700 rounded-lg font-medium hover:bg-gray-50 transition">
                            Annuler
                        </button>
                    </div>
                </form>
            </div>
        </div>
        
        <!-- Aperçu -->
        <div>
            <div class="bg-white rounded-xl shadow p-6">
                <h2 class="text-xl font-bold text-gray-800 mb-4">Aperçu du sondage</h2>
                <div class="space-y-4">
                    <div class="p-4 bg-gray-50 rounded-lg">
                        <h3 class="font-bold text-gray-800 mb-2">Titre du sondage</h3>
                        <p class="text-gray-600 text-sm">Votre titre apparaîtra ici</p>
                    </div>
                    <div class="p-4 bg-gray-50 rounded-lg">
                        <h3 class="font-bold text-gray-800 mb-2">Options</h3>
                        <ul class="space-y-2 text-gray-600 text-sm">
                            <li class="flex items-center">
                                <span class="material-icons text-sm mr-2">radio_button_unchecked</span>
                                Option 1
                            </li>
                            <li class="flex items-center">
                                <span class="material-icons text-sm mr-2">radio_button_unchecked</span>
                                Option 2
                            </li>
                        </ul>
                    </div>
                    <div class="p-4 bg-blue-50 rounded-lg">
                        <span class="material-icons text-blue-600 text-2xl mb-2">info</span>
                        <p class="text-blue-800 text-sm">Votre sondage sera visible dans la section "Vote" une fois créé.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Gestion des options de sondage
    document.addEventListener('DOMContentLoaded', function() {
        const optionsContainer = document.getElementById('options-container');
        const addOptionBtn = document.getElementById('add-option');
        let optionCount = 2;
        
        // Afficher les boutons de suppression pour les options existantes
        document.querySelectorAll('.remove-option').forEach(btn => {
            btn.classList.remove('hidden');
        });
        
        // Ajouter une nouvelle option
        addOptionBtn.addEventListener('click', function() {
            optionCount++;
            const newOption = document.createElement('div');
            newOption.className = 'flex items-center space-x-3';
            newOption.innerHTML = `
                <input type="text" 
                       class="poll-form-input flex-1 p-3 border border-gray-300 rounded-lg focus:outline-none focus:border-indigo-500"
                       placeholder="Option ${optionCount}"
                       required>
                <button type="button" class="text-red-500 hover:text-red-700 remove-option">
                    <span class="material-icons">delete</span>
                </button>
            `;
            optionsContainer.appendChild(newOption);
            
            // Gérer la suppression de l'option
            newOption.querySelector('.remove-option').addEventListener('click', function() {
                if (optionsContainer.children.length > 2) {
                    newOption.remove();
                }
            });
        });
        
        // Gérer la suppression des options existantes
        document.querySelectorAll('.remove-option').forEach(btn => {
            btn.addEventListener('click', function() {
                if (optionsContainer.children.length > 2) {
                    this.parentElement.remove();
                }
            });
        });
        
        // Gérer la soumission du formulaire
        document.getElementById('createPollForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Simuler la création du sondage
            const submitBtn = this.querySelector('button[type="submit"]');
            submitBtn.innerHTML = '<span class="material-icons animate-spin mr-2">refresh</span> Création en cours...';
            submitBtn.disabled = true;
            
            setTimeout(() => {
                submitBtn.innerHTML = '<span class="material-icons mr-2">check</span> Sondage créé !';
                submitBtn.classList.remove('bg-indigo-600', 'hover:bg-indigo-700');
                submitBtn.classList.add('bg-green-600');
                
                // Rediriger vers la page de vote après 2 secondes
                setTimeout(() => {
                    window.location.href = '/vote';
                }, 2000);
            }, 1500);
        });
    });
</script>