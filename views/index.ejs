<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> | iVote</title>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Google Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
    <style>
        body {
            background: #f5f7ff;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        }
        .sidebar-btn {
            transition: all 0.3s ease;
        }
        .sidebar-btn:hover {
            background: #f1f5f9;
        }
        .sidebar-btn.active {
            background: #6366f1;
            color: white;
        }
        .stat-card {
            transition: transform 0.3s ease;
        }
        .stat-card:hover {
            transform: translateY(-5px);
        }
        .voting-card {
            border: 2px solid transparent;
            transition: all 0.3s ease;
        }
        .voting-card:hover {
            border-color: #6366f1;
            transform: translateY(-2px);
        }
        .option-selected {
            background-color: #6366f1 !important;
            color: white !important;
            border-color: #6366f1 !important;
        }
        .poll-form-input {
            transition: border-color 0.3s ease;
        }
        .poll-form-input:focus {
            border-color: #6366f1;
            box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
        }
    </style>
</head>

<body class="flex min-h-screen">
    <!-- SIDEBAR -->
    <aside class="w-64 bg-white shadow-lg p-5 flex flex-col">
        <!-- LOGO -->
        <div class="text-center mb-8 pt-4">
            <h1 class="text-2xl font-bold text-indigo-600">iVote</h1>
            <p class="text-gray-500 text-sm">Système de vote en ligne</p>
        </div>

        <!-- USER PROFILE -->
        <div class="text-center mb-8">
            <img src="https://cdn-icons-png.flaticon.com/512/3135/3135715.png" 
                 class="w-16 h-16 mx-auto rounded-full border-2 border-indigo-100" />
            <h2 class="mt-3 font-bold"><%= user.name %></h2>
            <p class="text-gray-500 text-sm"><%= user.email %></p>
            <p class="text-gray-400 text-xs mt-1">Membre depuis <%= user.joinDate %></p>
        </div>

        <!-- MENU -->
        <nav class="flex-1">
            <div class="space-y-1">
                <a href="/dashboard" class="sidebar-btn flex items-center px-4 py-3 rounded-lg <%= page === 'dashboard' ? 'active' : '' %>">
                    <span class="material-icons mr-3">dashboard</span> Dashboard
                </a>
                
                <a href="/vote" class="sidebar-btn flex items-center px-4 py-3 rounded-lg <%= page === 'vote' ? 'active' : '' %>">
                    <span class="material-icons mr-3">how_to_vote</span> Vote
                </a>
                
                <a href="/poll/create" class="sidebar-btn flex items-center px-4 py-3 rounded-lg <%= page === 'create-poll' ? 'active' : '' %>">
                    <span class="material-icons mr-3">add_circle</span> Créer Sondage
                </a>
                
                <a href="/rooms" class="sidebar-btn flex items-center px-4 py-3 rounded-lg <%= page === 'rooms' ? 'active' : '' %>">
                    <span class="material-icons mr-3">meeting_room</span> Rooms
                </a>
                
                <a href="/results" class="sidebar-btn flex items-center px-4 py-3 rounded-lg <%= page === 'results' ? 'active' : '' %>">
                    <span class="material-icons mr-3">bar_chart</span> Résultats
                </a>
                
                <a href="/settings" class="sidebar-btn flex items-center px-4 py-3 rounded-lg <%= page === 'settings' ? 'active' : '' %>">
                    <span class="material-icons mr-3">settings</span> Paramètres
                </a>
            </div>
        </nav>

        <!-- LOGOUT -->
        <div class="mt-auto pt-6 border-t">
            <a href="/logout" class="sidebar-btn flex items-center px-4 py-3 rounded-lg text-red-600 hover:bg-red-50">
                <span class="material-icons mr-3">logout</span> Déconnexion
            </a>
        </div>
    </aside>

    <!-- MAIN CONTENT -->
    <main class="flex-1 p-8">
        <!-- HEADER -->
        <header class="mb-8">
            <div class="flex justify-between items-center">
                <div>
                    <h1 class="text-2xl font-bold text-gray-800">
                        <span class="text-indigo-600">Bonjour</span>, <%= user.prenom %>
                    </h1>
                    <p class="text-gray-500">Bienvenue sur votre tableau de bord iVote</p>
                </div>
                
                <div class="flex items-center space-x-4">
                    <div class="relative">
                        <span class="material-icons text-gray-600 text-2xl">notifications</span>
                        <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs w-5 h-5 rounded-full flex items-center justify-center">3</span>
                    </div>
                    <div class="h-8 w-8 bg-indigo-100 rounded-full flex items-center justify-center">
                        <span class="material-icons text-indigo-600">person</span>
                    </div>
                </div>
            </div>
        </header>

        <!-- CONTENU DE LA PAGE -->
        <div class="bg-white rounded-xl shadow p-6">
            <%- body %>
        </div>
    </main>

    <!-- SCRIPTS -->
    <script>
        // Vérifier la connexion
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Dashboard chargé pour:', '<%= user.name %>');
            
            // Vérification de session côté client
            fetch('/api/auth/status')
                .then(response => response.json())
                .then(data => {
                    if (!data.isAuthenticated) {
                        window.location.href = '/';
                    }
                })
                .catch(error => {
                    console.error('Erreur de vérification:', error);
                });
            
            // Ajouter des classes actives aux liens
            const currentPage = '<%= page %>';
            console.log('Page actuelle:', currentPage);
        });
    </script>
</body>
</html>